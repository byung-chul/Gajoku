<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008998"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".BadalActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40e0d0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/button_receiveCall"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toLeftOf="@+id/button_rejectCall"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="수락"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="#40e0d0"
                android:fontFamily="@font/bmjua" />

            <Button
                android:id="@+id/button_rejectCall"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:text="거절"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="#ffffff"
                android:fontFamily="@font/bmjua" />

            <TextView
                android:id="@+id/textView_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="배달 요청 가게"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/bmjua"  />

            <TextView
                android:id="@+id/textView_detailRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_below="@+id/textView_rest"
                android:fontFamily="@font/bmjua" />

            <ImageView
                android:id="@+id/image_direction"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/direction"
                android:layout_below="@+id/textView_detailRest"
                android:fontFamily="@font/bmjua" />

            <TextView
                android:id="@+id/textView_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="최종 배달 주소"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_below="@+id/image_direction"
                android:fontFamily="@font/bmjua" />



            <TextView
                android:id="@+id/textView_detailAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_below="@+id/textView_addr"
                android:fontFamily="@font/bmjua" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>